#!/bin/bash
set -e
shopt -s nullglob

command() {
  cat "$DIR/prepare.sql" migrations/*.sql "$DIR/commands/$1.sql" "$DIR/clean_up.sql" | psql -1tqv ON_ERROR_STOP=on -v VERBOSITY=terse --no-psqlrc
}

DIR=$(dirname $(readlink "$0"))

if [ "$1" == "clone" ]; then
  if [ $# -eq 1 ]; then
    command ''
  else
    command drop
    PGDATABASE="$2" pg_dump -N stampede | psql -1tqv ON_ERROR_STOP=on -v VERBOSITY=terse --no-psqlrc
    PGDATABASE="$2" pg_dump --data-only stampede.applied_migration | psql -1tqv ON_ERROR_STOP=on -v VERBOSITY=terse --no-psqlrc
    command migrate
  fi
else
  command "$1"
fi
